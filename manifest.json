{
  "manifest_version": 3,
  "name": "Boldify",
  "version": "1.0.0",
  "description": "Boldify: Toggle bold styling for the first letter of every word on any webpage.",
  "action": {
    "default_icon": "icons/icon.png",
    "default_title": "Boldify"
  },
  "permissions": ["scripting", "activeTab", "storage"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    { "matches": ["<all_urls>"], "js": ["content.js"], "run_at": "document_idle" }
  ]
}
